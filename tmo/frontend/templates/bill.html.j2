{% extends "base.html.j2" %}

{% block title %}{{ domain }}{% endblock title %}

{% block body %}
<section class="section">
    <div class="container">
        <h1>
            <span class="title" id="date"></span>
            <span class="title">&nbsp;&nbsp;&mdash;&nbsp;</span>
            <span class="title has-text-info">${{ total }}</span>
        </h1>

    </div>
    <br>
    <div id="panel" class="tabs container">
        <ul>
            <li class="is-active" data-target="details">
                <a>
                    <span class="icon is-small"><i class="fas fa-hashtag" aria-hidden="true"></i></span>
                    <span>Details</span>
                </a>
            </li>
            <li data-target="minutes">
                <a>
                    <span class="icon is-small"><i class="fas fa-phone-volume" aria-hidden="true"></i></span>
                    <span>Calls</span>
                </a>
            </li>
            <li data-target="messages">
                <a>
                    <span class="icon is-small"><i class="fas fa-comments" aria-hidden="true"></i></span>
                    <span>Messages</span>
                </a>
            </li>
            <li data-target="data">
                <a>
                    <span class="icon is-small"><i class="fas fa-server" aria-hidden="true"></i></span>
                    <span>Data</span>
                </a>
            </li>
            <li data-target="transactions">
                <a>
                    <span class="icon is-small"><i class="fas fa-money-bill-transfer" aria-hidden="true"></i></span>
                    <span>Amount Due</span>
                </a>
            </li>
        </ul>
    </div>
    <div id="panels">
        <div id="details" class="table-container container is-centered">
            <table class="table is-bordered is-hoverable is-fullwidth" style="white-space: nowrap;">
                <thead class="bill-header">
                    {% for values in table.header.values() %}
                    <tr>
                        <th></th>
                        {% for subscriber in values %}
                        <th class="has-text-weight-semibold">{{ subscriber }}</th>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </thead>
                <tbody>
                    {% for (name, key), values in table.charges.items() %}
                    <tr id="{{ name }}">
                        <th>{{ key }}</th>
                        {% for value in values %}
                        <td>
                            <div class="currency">
                                <span class="currency-symbol">$</span>
                                <span class="currency-value {{ value | currency_class }}">
                                    {{ "{0:.2f}".format(value) if value != 0 else "—" }}
                                </span>
                            </div>
                        </td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                    <tr class="blank-row"></tr>
                    {% for (name, key), values in table.usage.items() %}
                    <tr id="{{ name }}">
                        <th>{{ key }}</th>
                        {% for value in values %}
                        <td class="usage">
                            <span>{{ value }}</span>
                        </td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                    <tr class="blank-row"></tr>
                    {% for (name, key), values in table.summary.items() %}
                    <tr id="{{ name }}">
                        <th>{{ key }}</th>
                        {% for value in values %}
                        <td>
                            <div class="currency">
                                <span class="currency-symbol">$</span>
                                <span class="currency-value {{ value | currency_class }}">
                                    {{ "{0:.2f}".format(value) if value != 0 else "—" }}
                                </span>
                            </div>
                        </td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                    {% for key, values in table.recap.items() %}
                    <tr id="recap" class="has-text-grey-light">
                        <th>{{ key }}</th>
                        {% for value in values %}
                        <td>
                            <div class="currency">
                                <span class="currency-symbol">$</span>
                                <span class="currency-value">
                                    {{ "{0:.2f}".format(value) if value != 0 else "—" }}
                                </span>
                            </div>
                        </td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% if table.shared %}
                <section class="section">
                    <h3 class="title">Shared Charges</h3>
                    <table class="table is-bordered is-hoverable" style="white-space: nowrap;">
                        <thead>
                            <tr>
                                <th class="has-text-centered">Name</th>
                                <th class="has-text-centered">Charge</th>
                                <th class="has-text-centered">Previously</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for shared in table.shared %}
                                <tr class="shared">
                                    <td>{{ shared.name.title() }}</td>
                                    <td>
                                        <div class="currency">
                                            <span class="currency-symbol">$</span>
                                            <span class="currency-value has-text-right {{ shared.present | currency_class }}">
                                                {{ "{0:.2f}".format(shared.present) }}
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="currency has-text-grey-light">
                                            <span class="currency-symbol">$</span>
                                            <span class="currency-value has-text-right">
                                                {{ "{0:.2f}".format(shared.previous) }}
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </section>
            {% endif %}
        </div>
        <div id="transactions" class="container is-centered" style="display: none; width: 50%;">
            <section class="section">
                <div class="tile is-ancestor">
                    {% for name, amount in table.owed.items() %}
                        <div class="tile is-3 is-parent">
                            <article class="tile is-child box">
                                <p class="title">From {{ name }}</p>
                                <p class="subtitle has-text-right">${{ "{0:.2f}".format(amount) if amount}}</p>
                            </article>
                        </div>
                    {% endfor %}
                </div>
            </section>
        </div>
        <div id="minutes" class="container is-centered" style="display: none; width: 50%;">
            <canvas id="minutes-chart"></canvas>
        </div>
        <div id="messages" class="container is-centered" style="display: none; width: 50%;">
            <canvas id="messages-chart"></canvas>
        </div>
        <div id="data" class="container is-centered" style="display: none; width: 50%;">
            <canvas id="data-chart"></canvas>
        </div>
    </div>
</section>
{% endblock body %}

